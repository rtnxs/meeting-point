<!DOCTYPE html>
<html>
<head>
  <title>MeetingPoint</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <script src="https://api-maps.yandex.ru/2.1?apikey=<%= ENV['YANDEX_APIKEY'] %>&lang=ru_RU"
          type="text/javascript">
  </script>

  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

<nav class="navbar navbar-expand-lg navbar-light bg-light navbar-static-top">
  <div class="container">
    <%= link_to t('app.name'), root_path, class: 'navbar-brand' %>

    <div class="collapse navbar-collapse w-100 order-3">
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to 'Профиль', current_user, class: 'nav-link' %>
          </li>
          <li class="nav-item active">
            <%= link_to 'Выйти', destroy_user_session_path, :method => :delete, class: 'nav-link' %>
          </li>
        <% else %>
          <li class="nav-item active">
            <%= link_to 'Войти', new_user_session_path, class: 'nav-link' %>
          </li>
          <li class="nav-item active">
            <%= link_to 'Зарегистрироваться', new_user_registration_path, class: 'nav-link' %>
          </li>
        <% end %>
      </ul>
    </div>

  </div>
</nav>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-9">
      <%= bootstrap_flash %>
      <%= yield %>
    </div>
  </div>

  <footer>
    <p class="mt-5">&copy; <%= t('app.company') %></p>
  </footer>
</div>
</body>
</html>
