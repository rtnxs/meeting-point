<div class="row justify-content-center mt-5">
  <div class="col-md-6 shadow shadow-lg pt-3">
    <h3 class="font-weight-bold text-center"><%= t('.sign_in') %></h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group mt-4">
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'Email',
                          class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "current-password", autocomplete: "off",
                             class: "form-control", placeholder: t('activerecord.attributes.user.password') %>
      </div>

      <div class="form-row justify-content-between mr-1 ml-1">
        <div class="form-group">
          <%= f.submit t('.sign_in'), class: "btn btn-primary" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          </div>
        <% end %>

    <% end %>

    <div class="mb-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>