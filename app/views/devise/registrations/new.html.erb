<div class="row justify-content-center mt-5">
  <div class="col-md-6 shadow shadow-lg pt-3">
<%#= render partial: 'partials/form_errors', locals: {model: @user} %>

    <h3 class="font-weight-bold text-center"><%= t('.sign_up') %></h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group mt-4">
        <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: t('activerecord.attributes.user.name') %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, class: "form-control", placeholder: 'Email' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off",
                             class: "form-control", placeholder: t('activerecord.attributes.user.password') %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off",
                             class: "form-control", placeholder: t('activerecord.attributes.user.password_confirmation') %>
      </div>

      <div class="form-group">
        <%= f.submit t('.sign_up'), class: "btn btn-primary" %>
      </div>

    <% end %>

    <div class="mb-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>