<div class="row justify-content-center mt-5">
  <div class="col-md-6 shadow shadow-lg p-3">
    <%= render partial: 'partials/form_errors', locals: {model: @user} %>

    <h2><%= t('devise.passwords.edit.change_my_password') %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
      <%#= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <i><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></i>
          <%= f.password_field :password, autocomplete: "off",
                               class: 'form-control', placeholder: t('activerecord.attributes.user.password') %>
      </div>


      <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off",
                               class: 'form-control', placeholder: t('activerecord.attributes.user.password_confirmation') %>
      </div>

      <div class="form-group">
        <i><%= t('.we_need_your_current_password_to_confirm_your_changes') %></i>
          <%= f.password_field :current_password, autocomplete: "off",
                               class: 'form-control', placeholder: t('activerecord.attributes.user.current_password') %>
      </div>

      <div class="form-group">
          <%= f.submit t('devise.shared.links.save'), class: "btn btn-primary" %>
          <%= link_to t('devise.shared.links.delet'), registration_path(resource_name),
                      data: {confirm: "Are you sure?"}, method: :delete,
                      class: 'btn btn-danger' %>
          <%= link_to t('devise.shared.links.back'), :back, class: 'btn btn-secondary float-right' %>
      </div>

    <% end %>
  </div>
</div>
