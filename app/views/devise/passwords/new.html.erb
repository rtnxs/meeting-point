<div class="row justify-content-center mt-5">
  <div class="col-md-6 shadow shadow-lg p-3">
    <%= render partial: 'partials/form_errors', locals: {model: @user} %>

    <h2 class="text-center"><%= t('.forgot_your_password') %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
      <%#= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group mt-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: 'Email' %>
      </div>

      <div class="form-group">
        <%= f.submit t('.send_me_reset_password_instructions'), class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>