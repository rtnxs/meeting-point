<div class="event">
  <div class="event-info row">
    <div class="col-md-12">
      <%= content_tag 'div', '', class: 'event-background',
                      style: "background-image: url(#{event_photo(@event)})" %>

      <div class="event-info-inner row">
        <div class="col-md-6">
          <div class="event-description">
            <h1><%= @event.title %></h1>
            <h3><%= l @event.datetime, format: :default %></h3>
            <h3>
              <small>
                <%= link_to @event.address, "https://yandex.ru/maps/?text=#{@event.address}" %>
              </small>
            </h3>
            <p><%= @event.description %></p>
          </div>

          <% if current_user_can_edit?(@event) %>
            <div class="buffer-both">
              <%= link_to t('devise.registrations.edit.update'), edit_event_path(@event), class: 'btn btn-primary' %>
              <%= link_to t('devise.shared.links.delet'), event_path(@event), method: :delete,
                          data: {confirm: t('devise.registrations.edit.are_you_sure')}, class: 'btn btn-danger' %>
            </div>
          <% end %>
        </div>
        <div class="col-md-6 p-0">
          <div id="map"
            data-address="<%= @event.address %>"
            style="width: 100%; height: 100%;">
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">

      <div class="event-photos-gallery d-inline-block">
        <%= render partial: 'photos/photo', collection: @event.photos.except(@new_photo) %>
      </div>

      <div class="event-photo-form">
        <%= render partial: 'photos/form', locals: {photo: @new_photo || @event.photos.build} if current_user.present? %>
      </div>

      <div class="event-comments buffer-top">
        <%= render partial: 'comments/form',
                   locals: {comment: @new_comment || @event.comments.build} %>

        <div class="buffer-both">
          <%= render partial: 'comments/comment',
                     collection: @event.comments.except(@new_comment).order(created_at: :desc) %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="event-owner">
        <h4><%= t('views.event.show.organizer') %>:</h4>
        <p><%= render partial: 'users/user', object: @event.user %></p>
      </div>

      <% if @event.subscribers.any? %>
        <div class="event-subscriptions">
          <h4><%= t('views.event.show.subscribed') %>:</h4>
          <div>
            <p>
              <%= render partial: 'subscriptions/subscription',
                         collection: @event.subscriptions.except(@new_subscription) %>
            </p>
          </div>
        </div>
      <% end %>

      <% unless cant_subscribe %>
        <div class="event-subscription-form">
          <div>
            <%= render partial: 'subscriptions/form', locals: {
                subscription: @new_subscription || @event.subscriptions.build
            } %>
          </div>
        </div>
      <% end %>

    </div>
  </div>

</div>